{% extends 'base.html.twig' %}

{% block title %}Participant : {{ participant.name }}{% endblock %}

{% block body %}
    <h1 class= "m-5 text-center">Participant : {{ participant.name }}</h1>
<div class = "w-50 p-3 mx-auto">
    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ participant.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ participant.email }}</td>
            </tr>
            <tr>
                <th>Ateliers</th>
                <td>
                     <ul>{% for workshop in participant.workshops %}
                        <li>  {{ workshop.title }}</li>
 
                    {% endfor %}</ul></td>
                <td>
            </tr>
        </tbody>
    </table>

<div class="mt-5">
    <a class="btn btn-info" href="{{ path('app_participant_index') }}">Retour</a>
    </div>
<div class="mt-5">
    <a class="btn btn-primary" href="{{ path('app_participant_edit', {'id': participant.id}) }}">Modifier</a>
</div>
<div class="mt-5">
    {{ include('participant/_delete_form.html.twig') }}
    </div>
            </div>
{% endblock %}
