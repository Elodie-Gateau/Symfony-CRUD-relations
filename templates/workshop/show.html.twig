{% extends 'base.html.twig' %}

{% block title %}Workshop : {{ workshop.title }}{% endblock %}

{% block body %}
    <h1 class= "m-5 text-center">Workshop : {{ workshop.title }}</h1>
<div class = "w-50 p-3 mx-auto">
    <table class="table">
        <tbody>

            <tr>
                <th>Intitulé de l'atelier</th>
                <td>{{ workshop.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ workshop.description }}</td>
            </tr>
            <tr>
                <th>Événement</th>
                <td>{{ workshop.event.name }}</td>
            </tr>
            <tr>
                <th>Participants</th>
                <td>
                    <ul> {% for participant in workshop.participants %}
                        <li>  {{ participant.name }} </li>
                        
                    {% endfor %}
                    </ul>
                </td>
                
            </tr>
        </tbody>
    </table>
<div class="mt-5">
    <a class="btn btn-info" href="{{ path('app_workshop_index') }}">Retour</a>
    </div>
<div class="mt-5">
    <a class="btn btn-primary" href="{{ path('app_workshop_edit', {'id': workshop.id}) }}">Modifier</a>
</div>
<div class="mt-5">
    {{ include('workshop/_delete_form.html.twig') }}
    </div>
        </div>
{% endblock %}
